	"version": "0.2.0",
	"configurations": [
		{
			"name": "actl",
			"type": "python",
			"request": "launch",
			"program": "./library/actl/run.py",
			"console": "integratedTerminal",
			"env": {
					"PYTHONPATH": "./library/"
			}
		},
		{
			"name": "tests",
			"type": "python",
			"request": "launch",
			"module": "pytest",
			"args": ["-x", "./tests", "-vv"],
			"console": "integratedTerminal",
			"env": {
				 "PYTHONPATH": "./library/"
			}
	  	},
		{
			"name": "test",
			"type": "python",
			"request": "launch",
			"module": "pytest",
			"args": ["-x", "./tests", "-vv", "-k", "test_simple_while"],
			"console": "integratedTerminal",
			"env": {
				"PYTHONPATH": "./library/"
			}
		},
	  	{
			"name": "run current file",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"env": {
				"PYTHONPATH": "./library/"
			}
		}
	]
}
